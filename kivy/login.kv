Screen:

    MDTopAppBar:
        title: "Stock Prediction App"
        left_action_items: [["menu"]]
        right_action_items: [["dots-vertical"]]

    
    MDCard:
        size_hint: None, None
        size: 350, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 3
        padding: 25
        spacing: 25
        orientation: 'vertical'
    
        MDLabel:
            id: login_page
            text: "Login Page"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "Username"
            #mode: "round"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "Password"
            #mode: "round"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRaisedButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()
        
        MDRaisedButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()

        Widget:
            size_hint_y: None
            height: 5

    MDBottomAppBar:
        MDTopAppBar:
            icon: 'git'
            type: 'bottom'
            mode: "end"

    MDRaisedButton:
        text: "Login"
        on_press: 
            app.navigate_to_home()  
            app.root.current = 'home_page'

    MDRaisedButton:
        text: "Back to Registration"
        on_press: 
            app.root.current = 'registration_page'