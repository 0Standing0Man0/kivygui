<RootLayout>:
    padding: dp(16)
    spacing: dp(16)
    orientation: 'vertical'

    MDTextField:
        id: search_bar
        hint_text: "Enter stock symbol..."
        helper_text: "e.g., AAPL for Apple Inc."
        mode: "rectangle"
        size_hint_x: 0.9
        pos_hint: {'center_x': 0.5}
        on_focus: root.show_stock_dropdown(self) if self.focus else None

    MDLabel:
        id: graph_placeholder
        text: "Graph will be plotted here"
        halign: "center"
        valign: "middle"
        size_hint_y: 2.0
        height: self.parent.height * 2.0

    MDLabel:
        id: current_stock_details
        text: "Current stock details will be shown here"
        halign: "center"
        valign: "middle"
        size_hint_y: None
        height: dp(100)

    MDRaisedButton:
        text: "Fetch Stock Details"
        pos_hint: {'center_x': 0.5}
        on_release: root.fetch_stock_details()
